@{
    ViewBag.Title = "Career Dashboard";
    Layout = "~/Views/Career/_Layout.cshtml";
}

<div class="container">
    <h2 class="mb-4">Welcome to Your Career Dashboard</h2>
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Job Listings</h5>
                </div>
                <div class="card-body">
                    <p>Explore and apply for various job opportunities tailored to your skills and interests.</p>
                    <a href="#" class="btn btn-primary">View Listings</a>
                </div>
                <div class="card-footer text-center">
                    <small>Find your next career opportunity here.</small>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Application Status</h5>
                </div>
                <div class="card-body">
                    <p>Track the progress of your job applications and manage your application status.</p>
                    <a href="#" class="btn btn-primary">View Applications</a>
                </div>
                <div class="card-footer text-center">
                    <small>Stay updated with your application status.</small>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Profile</h5>
                </div>
                <div class="card-body">
                    <p>Update your profile information and manage your personal details.</p>
                    <a href="#" class="btn btn-primary">Edit Profile</a>
                </div>
                <div class="card-footer text-center">
                    <small>Keep your profile information current.</small>
                </div>
            </div>
        </div>
    </div>
</div>
